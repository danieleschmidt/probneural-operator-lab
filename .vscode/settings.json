{
  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.ruffEnabled": true,
  "python.linting.ruffArgs": ["--config=pyproject.toml"],
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--config=pyproject.toml"],
  "python.sortImports.path": "isort",
  "python.sortImports.args": ["--settings-path=pyproject.toml"],
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "tests",
    "--cov=probneural_operator",
    "--cov-report=html",
    "--cov-report=term-missing"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.ruff": true
  },
  "editor.rulers": [88],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.associations": {
    "*.toml": "toml",
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "Dockerfile*": "dockerfile",
    "*.env*": "properties",
    "*.md": "markdown"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/htmlcov": true,
    "**/.coverage": true,
    "**/dist": true,
    "**/*.egg-info": true,
    "**/.venv": true,
    "**/venv": true,
    "**/env": true,
    "**/.env": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.venv": true,
    "**/venv": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/htmlcov": true,
    "**/dist": true,
    "**/*.egg-info": true
  },
  "jupyter.askForKernelRestart": false,
  "jupyter.generateCellTags": true,
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "jupyter.pythonCellFolding": true,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "makefile.extensionOutputFolder": "./.vscode",
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "/.github/workflows/*",
    "https://json.schemastore.org/pre-commit-config.json": "/.pre-commit-config.yaml"
  },
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  "markdown.extension.toc.levels": "2..6",
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\*|\\+|\\w+\\.)\\s*)($TAGS)\\s*:?\\s*(.*)",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.blame.format": "${author|10} ${agoOrDate|14-}",
  "workbench.colorCustomizations": {
    "activityBar.background": "#2D3748",
    "activityBar.foreground": "#E2E8F0",
    "activityBarBadge.background": "#4299E1",
    "statusBar.background": "#2D3748",
    "statusBar.foreground": "#E2E8F0"
  },
  "workbench.colorTheme": "Default Dark+",
  "autoDocstring.docstringFormat": "google",
  "autoDocstring.generateDocstringOnEnter": true,
  "emmet.includeLanguages": {
    "markdown": "html"
  }
}