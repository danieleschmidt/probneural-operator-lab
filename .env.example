# Environment Configuration for ProbNeural Operator Lab
# Copy this file to .env and configure as needed

# =============================================================================
# Development Environment
# =============================================================================

# Debug mode (set to 'true' for development)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Computing Resources
# =============================================================================

# CUDA settings
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF="max_split_size_mb:128"

# Number of CPU cores for parallel processing
NUM_WORKERS=4

# Memory limit for data loading (in GB)
MAX_MEMORY_GB=16

# =============================================================================
# Data Configuration
# =============================================================================

# Data directories
DATA_DIR=./data
DATASET_CACHE_DIR=./data/cache
MODEL_CHECKPOINT_DIR=./models/checkpoints

# Download settings
DOWNLOAD_TIMEOUT=300
MAX_DOWNLOAD_RETRIES=3

# =============================================================================
# Training Configuration
# =============================================================================

# Default training settings
DEFAULT_BATCH_SIZE=32
DEFAULT_LEARNING_RATE=1e-3
DEFAULT_EPOCHS=100

# Mixed precision training
USE_AMP=true

# Distributed training
MASTER_ADDR=localhost
MASTER_PORT=12355
WORLD_SIZE=1
RANK=0

# =============================================================================
# Uncertainty Quantification
# =============================================================================

# Default posterior approximation method
DEFAULT_POSTERIOR=laplace

# Laplace approximation settings
LAPLACE_HESSIAN_STRUCTURE=kron
LAPLACE_PRIOR_PRECISION=1.0

# Ensemble settings
ENSEMBLE_SIZE=5

# =============================================================================
# Active Learning
# =============================================================================

# Default acquisition function
DEFAULT_ACQUISITION=bald

# Batch size for active learning
AL_BATCH_SIZE=10

# Budget for active learning experiments
AL_BUDGET=1000

# =============================================================================
# Experiment Tracking
# =============================================================================

# Weights & Biases
WANDB_PROJECT=probneural-operator-lab
WANDB_ENTITY=your-username
WANDB_MODE=online  # online, offline, disabled

# MLflow
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=default

# TensorBoard
TENSORBOARD_LOG_DIR=./logs/tensorboard

# =============================================================================
# API Configuration
# =============================================================================

# Web API settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Authentication (if needed)
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite for local development
DATABASE_URL=sqlite:///./app.db

# PostgreSQL for production
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# =============================================================================
# External Services
# =============================================================================

# HuggingFace Hub
HF_TOKEN=your-huggingface-token

# GitHub (for model hosting)
GITHUB_TOKEN=your-github-token

# =============================================================================
# Testing Configuration
# =============================================================================

# Test settings
TEST_DATA_DIR=./tests/data
PYTEST_WORKERS=auto

# Skip slow tests during development
SKIP_SLOW_TESTS=true

# Skip GPU tests if no GPU available
SKIP_GPU_TESTS=false

# =============================================================================
# Documentation
# =============================================================================

# Sphinx documentation
DOCS_BUILD_DIR=./docs/_build
DOCS_SOURCE_DIR=./docs

# =============================================================================
# Security
# =============================================================================

# Secret key for cryptographic operations
SECRET_KEY=change-this-in-production

# CORS settings for web API
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# Performance Monitoring
# =============================================================================

# Profiling
ENABLE_PROFILING=false
PROFILER_OUTPUT_DIR=./profiling

# Memory monitoring
ENABLE_MEMORY_MONITORING=false

# =============================================================================
# Deployment
# =============================================================================

# Environment type
ENVIRONMENT=development  # development, staging, production

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# Backup and Storage
# =============================================================================

# Model storage backend
MODEL_STORAGE_BACKEND=local  # local, s3, gcs, azure

# S3 settings (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
S3_BUCKET=your-s3-bucket

# =============================================================================
# Custom Settings
# =============================================================================

# Add your custom environment variables here